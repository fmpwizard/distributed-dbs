# mongod.conf

# for documentation of all options, see:
#   http://docs.mongodb.org/manual/reference/configuration-options/

# Where and how to store data.
storage:
  dbPath: /var/lib/mongodb # Update to secondary drive path on prod
  directoryPerDB: true
  journal:
    enabled: true
  engine: wiredTiger
#  engine:
#  mmapv1:
#  wiredTiger:

# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

# network interfaces
net:
  port: 27017
  bindIp: "127.0.0.1,{{ hostvars[inventory_hostname]['ansible_default_ipv4'].address }}"


#processManagement:

#security:

#operationProfiling:

replication:
  replSetName: mongo-repl-set
  oplogSizeMB: 1024

#sharding:

